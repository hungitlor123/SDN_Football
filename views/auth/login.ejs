<div
  class="d-flex justify-content-center align-items-center"
  style="min-height: 80vh"
>
  <div
    class="card shadow-lg p-4"
    style="max-width: 400px; width: 100%; border-radius: 18px"
  >
    <div class="text-center mb-4">
      <i class="fas fa-futbol fa-3x mb-2 text-warning"></i>
      <h2 class="fw-bold mb-0" style="color: #1a2236">Sign In</h2>
      <div class="text-muted mb-2">Football Manager</div>
    </div>
    <% if (error) { %>
    <div class="alert alert-danger" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= error %>
    </div>
    <% } %>
    <form action="/login" method="POST" id="loginForm">
      <div class="mb-3">
        <label for="membername" class="form-label">Username</label>
        <input
          type="text"
          class="form-control form-control-lg"
          id="membername"
          name="membername"
          required
          autofocus
          style="border-radius: 10px"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control form-control-lg"
          id="password"
          name="password"
          required
          style="border-radius: 10px"
        />
      </div>
      <div class="d-grid mb-2">
        <button
          type="submit"
          class="btn btn-warning btn-lg fw-bold"
          id="loginBtn"
        >
          <span id="loginBtnText"
            ><i class="fas fa-sign-in-alt me-1"></i>Login</span
          >
        </button>
      </div>
    </form>
    <div class="text-center mt-3">
      <span class="text-muted">Don't have an account?</span>
      <a
        href="/register"
        class="fw-bold text-decoration-none"
        style="color: #1a2236"
        >Register</a
      >
    </div>
  </div>
</div>
<script>
  document.getElementById("loginForm").addEventListener("submit", function () {
    var btn = document.getElementById("loginBtn");
    var btnText = document.getElementById("loginBtnText");
    btn.disabled = true;
    btnText.innerHTML =
      '<span class="spinner-border spinner-border-sm me-2"></span>Signing in...';
  });
</script>
