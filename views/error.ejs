<div
  class="d-flex justify-content-center align-items-center"
  style="min-height: 80vh"
>
  <div
    class="card shadow-lg p-4 text-center"
    style="max-width: 500px; border-radius: 20px"
  >
    <div class="mb-4">
      <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
    </div>
    <h1 class="fw-bold mb-3 text-danger"><%= title %></h1>
    <p class="lead mb-4 text-muted"><%= message %></p>
    <% if (error && error !== message) { %>
    <div class="alert alert-danger mx-auto" style="max-width: 400px">
      <h6 class="alert-heading">Error Details:</h6>
      <p class="mb-0"><%= error %></p>
    </div>
    <% } %>
    <div class="mt-4 d-flex justify-content-center gap-3">
      <a href="/" class="btn btn-warning btn-lg">
        <i class="fas fa-home me-2"></i>Go Home
      </a>
      <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
        <i class="fas fa-arrow-left me-2"></i>Go Back
      </button>
    </div>
  </div>
</div>
