<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card shadow-lg p-4 w-100" style="max-width: 600px; border-radius: 20px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold mb-0" style="color: #1a2236;"><i class="fas fa-plus me-2"></i>Add New Player</h2>
      <a href="/admin/players" class="btn btn-outline-secondary fw-bold">
        <i class="fas fa-arrow-left me-1"></i>Back to Player List
      </a>
    </div>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="/admin/players" method="POST">
      <div class="row mb-3">
        <div class="col-md-6 mb-3 mb-md-0">
          <label for="playerName" class="form-label">Player Name</label>
          <input type="text" class="form-control form-control-lg" id="playerName" name="playerName" required value="<%= formData?.playerName || '' %>" style="border-radius: 10px;">
        </div>
        <div class="col-md-6">
          <label for="image" class="form-label">Image URL</label>
          <input type="text" class="form-control form-control-lg" id="image" name="image" required value="<%= formData?.image || '' %>" style="border-radius: 10px;">
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-md-4 mb-3 mb-md-0">
          <label for="cost" class="form-label">Value ($)</label>
          <input type="number" class="form-control form-control-lg" id="cost" name="cost" required value="<%= formData?.cost || '' %>" style="border-radius: 10px;">
        </div>
        <div class="col-md-4 mb-3 mb-md-0">
          <label for="team" class="form-label">Team</label>
          <select class="form-select form-select-lg" id="team" name="team" required style="border-radius: 10px;">
            <% teams.forEach(team => { %>
              <option value="<%= team._id %>" <%= formData?.team == team._id ? 'selected' : '' %>><%= team.teamName %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-4 d-flex align-items-center justify-content-center">
          <div class="form-check mt-4">
            <input class="form-check-input" type="checkbox" id="isCaptain" name="isCaptain" value="true" <%= formData?.isCaptain ? 'checked' : '' %>>
            <label class="form-check-label fw-bold" for="isCaptain">
              <i class="fas fa-crown text-warning"></i> Captain
            </label>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="infomation" class="form-label">Player Information</label>
        <textarea class="form-control form-control-lg" id="infomation" name="infomation" rows="4" required style="border-radius: 10px;"><%= formData?.infomation || '' %></textarea>
      </div>
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-warning fw-bold">
          <i class="fas fa-plus me-1"></i>Add Player
        </button>
      </div>
    </form>
  </div>
</div>
