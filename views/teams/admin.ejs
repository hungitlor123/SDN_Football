<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold mb-0" style="color: #1a2236">
      <i class="fas fa-shield-alt me-2"></i>Team Management
    </h2>
    <a href="/admin/players" class="btn btn-outline-warning fw-bold">
      <i class="fas fa-users-cog me-1"></i>Manage Players
    </a>
  </div>
  <div class="card shadow-lg p-3" style="border-radius: 20px">
    <div class="mb-3 text-end">
      <a href="/admin/teams/new" class="btn btn-warning fw-bold">
        <i class="fas fa-plus me-1"></i>Add New Team
      </a>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-warning">
          <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% teams.forEach(team => { %>
          <tr>
            <td class="fw-bold" style="color: #1a2236"><%= team.teamName %></td>
            <td><%= new Date(team.createdAt).toLocaleDateString() %></td>
            <td>
              <a
                href="/admin/teams/<%= team._id %>/edit"
                class="btn btn-sm btn-outline-primary fw-bold me-1"
              >
                <i class="fas fa-edit"></i> Edit
              </a>
              <form
                action="/admin/teams/<%= team._id %>?_method=DELETE"
                method="POST"
                class="d-inline"
              >
                <button
                  type="submit"
                  class="btn btn-sm btn-outline-danger fw-bold"
                  onclick="return confirm('Are you sure you want to delete this team?');"
                >
                  <i class="fas fa-trash"></i> Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
