<div
  class="d-flex justify-content-center align-items-center"
  style="min-height: 80vh"
>
  <div
    class="card shadow-lg p-4 w-100"
    style="max-width: 500px; border-radius: 20px"
  >
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold mb-0" style="color: #1a2236">
        <i class="fas fa-plus me-2"></i>Add New Team
      </h2>
      <a href="/admin/teams" class="btn btn-outline-secondary fw-bold">
        <i class="fas fa-arrow-left me-1"></i>Back to Team List
      </a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger" role="alert">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <%= error %>
    </div>
    <% } %>

    <form action="/admin/teams" method="POST">
      <div class="mb-3">
        <label for="teamName" class="form-label">Team Name</label>
        <input
          type="text"
          class="form-control form-control-lg"
          id="teamName"
          name="teamName"
          value="<%= typeof formData !== 'undefined' && formData.teamName ? formData.teamName : '' %>"
          required
          style="border-radius: 10px"
        />
      </div>
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-warning fw-bold">
          <i class="fas fa-plus me-1"></i>Add Team
        </button>
      </div>
    </form>
  </div>
</div>
